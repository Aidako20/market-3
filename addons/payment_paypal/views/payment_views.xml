<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <data>

        <recordid="acquirer_form_paypal"model="ir.ui.view">
            <fieldname="name">acquirer.form.paypal</field>
            <fieldname="model">payment.acquirer</field>
            <fieldname="inherit_id"ref="payment.acquirer_form"/>
            <fieldname="arch"type="xml">
                <xpathexpr='//group[@name="acquirer"]'position='inside'>
                    <groupattrs="{'invisible':[('provider','!=','paypal')]}">
                        <fieldname="paypal_email_account"attrs="{'required':[('provider','=','paypal'),('state','!=','disabled')]}"/>
                        <fieldname="paypal_seller_account"/>
                        <fieldname="paypal_pdt_token"/>
                        <fieldname="paypal_use_ipn"attrs="{'required':[('provider','=','paypal'),('state','!=','disabled')]}"/>
                        <acolspan="2"href="https://doc.flectrahq.com/2.0/applications/general/payment_acquirers/paypal.html"target="_blank">Howtoconfigureyourpaypalaccount?</a>
                    </group>
                </xpath>
            </field>
        </record>

        <recordid="transaction_form_paypal"model="ir.ui.view">
            <fieldname="name">acquirer.transaction.form.paypal</field>
            <fieldname="model">payment.transaction</field>
            <fieldname="inherit_id"ref="payment.transaction_form"/>
            <fieldname="arch"type="xml">
                <xpathexpr="//field[@name='acquirer_reference']"position="after">
                    <fieldname="paypal_txn_type"readonly="1"attrs="{'invisible':[('provider','!=','paypal')]}"/>
                </xpath>
            </field>
        </record>

    </data>
</flectra>
