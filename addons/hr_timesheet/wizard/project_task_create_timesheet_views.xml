<?xmlversion="1.0"encoding="UTF-8"?>
<flectra>

    <recordid="project_task_create_timesheet_view_form"model="ir.ui.view">
        <fieldname="name">project.task.create.timesheet.wizard.form</field>
        <fieldname="model">project.task.create.timesheet</field>
        <fieldname="arch"type="xml">
            <formstring="Savetime">
                <group>
                    <fieldname="task_id"invisible="True"/>
                    <fieldname="time_spent"string="Duration"class="oe_inline"widget="float_time"required="True"/>
                    <fieldname="description"widget="text"placeholder="Describeyouractivity..."/>
                </group>
                <footer>
                    <buttonstring="Save"type="object"name="save_timesheet"class="btnbtn-primary"/>
                    <buttonstring="Cancel"special="cancel"type="object"class="btnbtn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</flectra>
