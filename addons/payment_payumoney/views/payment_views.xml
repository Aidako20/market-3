<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <recordid="payment_acquirer_form_payumoney"model="ir.ui.view">
        <fieldname="name">payment.acquirer.form.inherit</field>
        <fieldname="model">payment.acquirer</field>
        <fieldname="inherit_id"ref="payment.acquirer_form"/>
        <fieldname="arch"type="xml">
            <xpathexpr='//group[@name="acquirer"]'position='inside'>
                <groupattrs="{'invisible':[('provider','!=','payumoney')]}">
                    <fieldname="payumoney_merchant_key"attrs="{'required':[('provider','=','payumoney'),('state','!=','disabled')]}"/>
                    <fieldname="payumoney_merchant_salt"attrs="{'required':[('provider','=','payumoney'),('state','!=','disabled')]}"password="True"/>
                </group>
            </xpath>
        </field>
    </record>
</flectra>
