<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <recordid="website_slides_forum_channel_inherit_view_form"model="ir.ui.view">
        <fieldname="name">website.slides_forum.view.form.inherit.slide.channel</field>
        <fieldname="model">slide.channel</field>
        <fieldname="inherit_id"ref="website_slides.view_slide_channel_form"/>
        <fieldname="arch"type="xml">
            <xpathexpr="//button[@name='action_view_ratings']"position="after">
                <buttonname="action_redirect_to_forum"
                    type="object"
                    class="oe_stat_button"
                    attrs="{'invisible':[('forum_id','=',False)]}"
                    icon="fa-comment">
                    <fieldstring="ForumPosts"name="forum_total_posts"widget="statinfo"/>
                </button>
            </xpath>
            <xpathexpr="//field[@name='allow_comment']"position="after">
                <fieldstring="Forum"name="forum_id"/>
    		</xpath>
        </field>
    </record>
</flectra>
