<?xmlversion="1.0"encoding="utf-8"?>
<flectra>

    <recordid="view_event_form_inherit_ticket"model="ir.ui.view">
        <fieldname="name">event.form.inherit</field>
        <fieldname="model">event.event</field>
        <fieldname="inherit_id"ref="event.view_event_form"/>
        <fieldname="arch"type="xml">
            <xpathexpr="//div[hasclass('oe_button_box')]"position="inside">
                <fieldname="currency_id"invisible="1"/>
                <buttonname="action_view_linked_orders"
                        type="object"class="oe_stat_button"icon="fa-dollar"
                        groups="sales_team.group_sale_salesman"
                        help="Totalsalesforthisevent"
                        attrs="{'invisible':['|',('sale_price_subtotal','=',0),('sale_price_subtotal','=',False)]}">
                    <divclass="o_field_widgeto_stat_info">
                        <spanclass="o_stat_value">
                            <fieldstring="Sales"name="sale_price_subtotal"
                                widget="monetary"options="{'currency_field':'currency_id'}"/>
                            </span>
                        <spanclass="o_stat_text">Sales</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</flectra>
