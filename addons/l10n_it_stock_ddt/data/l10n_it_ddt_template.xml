<?xmlversion="1.0"encoding="UTF-8"?>
<flectra>
     <templateid="my_view_name"inherit_id="l10n_it_edi.account_invoice_it_FatturaPA_export">
            <xpathexpr='//DatiDDT'position="after">
                <tt-if="ddt_dictandnotrecord.l10n_it_ddt_id">
                    <tt-foreach="ddt_dict"t-as="picking">
                        <DatiDDT>
                            <NumeroDDTt-esc="format_alphanumeric(picking.l10n_it_ddt_number[-20:])"/>
                            <DataDDTt-esc="format_date(picking.date_done)"/>
                            <tt-if="len(ddt_dict)>1">
                                <tt-foreach="ddt_dict[picking]"t-as="line_ref">
                                    <RiferimentoNumeroLineat-esc="line_ref"/>
                                </t>
                            </t>
                        </DatiDDT>
                    </t>
                </t>
            </xpath>
        </template>
</flectra>
