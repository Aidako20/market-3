<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <data>

        <!--Add'serialization_field_id'inir.modelformview-->
        <recordmodel="ir.ui.view"id="model_form_view">
            <fieldname="model">ir.model</field>
            <fieldname="inherit_id"ref="base.view_model_form"/>
            <fieldname="arch"type="xml">
                <fieldname="related"position="before">
                    <fieldname="serialization_field_id"
                        domain="[('ttype','=','serialized'),('model_id','=',parent.model)]"
                        attrs="{'readonly':[('state','=','base')]}"/>
                </field>
            </field>
        </record>

        <!--Add'serialization_field_id'inir.model.fieldsformview-->
        <recordmodel="ir.ui.view"id="field_form_view">
            <fieldname="model">ir.model.fields</field>
            <fieldname="inherit_id"ref="base.view_model_fields_form"/>
            <fieldname="arch"type="xml">
                <fieldname="related"position="before">
                    <fieldname="serialization_field_id"
                        context="{'default_model_id':model_id,'default_ttype':'serialized'}"
                        attrs="{'readonly':[('state','=','base')]}"/>
                </field>
            </field>
        </record>

    </data>
</flectra>
