                </field>
            </field>
        </record>

        <recordid="view_account_tax_template_tree"model="ir.ui.view">
            <fieldname="name">account.tax.template.sii.tree</field>
            <fieldname="model">account.tax.template</field>
            <fieldname="inherit_id"ref="account.view_account_tax_template_tree"/>
            <fieldname="arch"type="xml">
                <fieldname="name"position="before">
                    <fieldname="l10n_cl_sii_code"options="{'format':false}"/>
                </field>
            </field>
        </record>
    </data>
</flectra>