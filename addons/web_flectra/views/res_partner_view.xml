<?xml version="1.0" encoding="utf-8" ?>
<flectra>

    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']"
                   position="inside">
                <field name="customer"/>
            </xpath>
            <xpath expr="//group[@name='purchase']"
                   position="inside">
                <field name="supplier"/>
            </xpath>

        </field>
    </record>

    <record id="view_res_partner_filter_inherit" model="ir.ui.view">
        <field name="name">res.partner.select</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <search string="Search Partner">
                <filter string="Customers" name="customer" domain="[('customer','=',1), ('parent_id', '=', False)]"/>
                <filter string="Vendors" name="supplier" domain="[('supplier','=',1), ('parent_id', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="view_sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id" domain="[('customer','=',True)]"
                       context="{'search_default_customer':1, 'show_address': 1,'res_partner_search_mode': 'customer', 'show_vat': True}"
                       options='{"always_reload": True}'
                       widget="res_partner_many2one"/>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_inherit" model="ir.ui.view">
        <field name="name">purchase.order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id" domain="[('supplier','=',True)]"
                       context="{'search_default_supplier':1, 'default_supplier':1, 'default_customer':0, 'show_address': 1,'res_partner_search_mode': 'supplier', 'show_vat': True}"
                       options='{"always_reload": True}'
                       widget="res_partner_many2one"
                       placeholder="Name, TIN, Email, or Reference"/>
            </xpath>
        </field>
    </record>


</flectra>