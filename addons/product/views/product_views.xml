    <recordid="action_product_price_list_report"model="ir.actions.server">
        <fieldname="name">GeneratePricelist</field>
        <fieldname="groups_id"eval="[(4,ref('group_product_pricelist'))]"/>
        <fieldname="model_id"ref="product.model_product_product"/>
        <fieldname="binding_model_id"ref="product.model_product_product"/>
        <fieldname="state">code</field>
