<?xmlversion="1.0"encoding="utf-8"?>
<flectra>

    <recordid="sale_order_form_view_inherit"model="ir.ui.view">
        <fieldname="name">sale.order.form.inherit.sale.expense</field>
        <fieldname="model">sale.order</field>
        <fieldname="inherit_id"ref="sale.view_order_form"/>
        <fieldname="arch"type="xml">
            <data>
               <xpathexpr="//button[@name='action_view_invoice']"position="before">
                   <buttontype="action"
                       name="%(sale_expense.hr_expense_action_from_sale_order)d"
                       class="oe_stat_button"
                       icon="fa-money"
                       attrs="{'invisible':[('expense_count','=',0)]}">
                       <fieldname="expense_count"widget="statinfo"string="Expenses"/>
                   </button>
                </xpath>
            </data>
        </field>
    </record>

</flectra>
