            <fieldname="report_name">purchase.report_purchasequotation</field>
            <fieldname="report_file">purchase.report_purchasequotation</field>
            <fieldname="print_report_name">'RequestforQuotation-%s'%(object.name)</field>
            <fieldname="binding_model_id"ref="model_purchase_order"/>
            <fieldname="binding_type">report</field>
        </record>
    </data>
