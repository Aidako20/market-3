<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">

    <tt-name="pos_mercury.OrderReceipt"t-inherit="point_of_sale.OrderReceipt"t-inherit-mode="extension"owl="1">
        <xpathexpr="//t[@t-foreach='receipt.paymentlines']"position="inside">
            <tt-if="line.mercury_data">
                <divclass="pos-receipt-left-padding">
                    <span>APPROVALCODE:</span>
                    <span>
                        <tt-esc="line.mercury_auth_code"/>
                    </span>
                </div>
            </t>
        </xpath>
        <xpathexpr="//div[hasclass('pos-receipt-order-data')]"position="after">
            <divt-if="hasPosMercurySignature">
                <br/>
                <div>CARDHOLDERWILLPAYCARDISSUER</div>
                <div>ABOVEAMOUNTPURSUANT</div>
                <div>TOCARDHOLDERAGREEMENT</div>
                <br/>
                <br/>
                <div>X______________________________</div>
            </div>
        </xpath>
    </t>

</templates>
