<?xmlversion="1.0"encoding="utf-8"?>
<templatesid="template"xml:space="preserve">

    <tt-name="PaymentTransactionPopup"owl="1">
        <divrole="dialog"class="modal-dialog">
            <divclass="popup">
                <pclass="title">
                    <tt-esc="props.title"></t>
                </p>
                <pclass="body">
                    <tt-esc="state.message"></t>
                </p>
                <divt-if="state.confirmButtonIsShown"class="footer">
                    <divclass="buttoncancel"t-on-click="confirm">
                        <tt-esc="props.confirmText"></t>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
