<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <data>

        <recordid="view_account_payment_register_form_inherit_payment"model="ir.ui.view">
            <fieldname="name">account.payment.register.form.inherit.payment</field>
            <fieldname="model">account.payment.register</field>
            <fieldname="inherit_id"ref="account.view_account_payment_register_form"/>
            <fieldname="arch"type="xml">
                <fieldname="payment_method_id"position="after">
                    <!--Invisiblefields-->
                    <fieldname="payment_method_code"invisible="1"/>
                    <fieldname="suitable_payment_token_partner_ids"invisible="1"/>

                    <fieldname="payment_token_id"
                           options="{'no_create':True}"
                           attrs="{'invisible':['|',('payment_method_code','!=','electronic'),'|',('can_edit_wizard','=',False),'&amp;',('can_group_payments','=',True),('group_payment','=',False)]}"/>
                </field>
            </field>
        </record>

    </data>
</flectra>
