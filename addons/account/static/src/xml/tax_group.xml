<?xmlversion='1.0'encoding='utf-8'?>

<templates>
    <tt-name="AccountTaxGroupTemplate">
        <tableclass="o_groupo_inner_groupoe_subtotal_footerborder-0my-0"style="min-width:100%;">
            <tbody>
                <tt-foreach="lines"t-as="line">
                    <tr>
                        <tdclass="o_td_labeloe_tax_group_name">
                            <labelclass="o_form_label"t-esc="line[0]"/>
                        </td>
                        <tdclass="oe_tax_group_editable"t-att-data-tax-group-id="line[6]">
                            <tt-if="displayEditWidgetandline[1]!==0">
                                <spanclass="tax_group_edit">
                                    <iclass="fafa-pencil"></i>
                                    <spanclass="oe_tax_group_amount_value">
                                        <tt-esc="line[3]"/>
                                    </span>
                                </span>
                                <spanclass="tax_group_edit_inputd-none">
                                    <inputtype="text"class="o_field_floato_field_numbero_input"t-att-data-original-value="line[1]"/>
                                </span>
                            </t>
                            <tt-if="!displayEditWidgetorline[1]===0">
                                <spanclass="oe_tax_group_amount_value">
                                    <tt-esc="line[3]"/>
                                </span>
                            </t>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</templates>
