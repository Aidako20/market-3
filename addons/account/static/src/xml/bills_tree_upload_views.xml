<?xmlversion="1.0"encoding="UTF-8"?>

<templates>
    <tt-name="account.BillsHiddenUploadForm">
        <divclass="d-noneo_vendor_bill_upload">
            <tt-call="HiddenInputFile">
                <tt-set="multi_upload"t-value="true"/>
                <tt-set="fileupload_id"t-value="widget.fileUploadID"/>
                <tt-set="fileupload_action"t-translation="off">/web/binary/upload_attachment</t>
                <inputtype="hidden"name="model"value=""/>
                <inputtype="hidden"name="id"value="0"/>
            </t>
        </div>
    </t>

    <tt-extend="ListView.buttons"t-name="BillsListView.buttons">
        <tt-jquery="button.o_list_button_add"t-operation="after">
            <buttontype="button"class="btnbtn-secondaryo_button_upload_bill">
                Upload
            </button>
        </t>
    </t>
</templates>
