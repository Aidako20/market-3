<?xmlversion="1.0"encoding="utf-8"?>
<flectra>

<templateid="remove_external_snippets"inherit_id="website.external_snippets">
    <xpathexpr="//t[@t-install='website_form']"position="replace"/>
</template>

<templateid="snippets"inherit_id="website.snippets"name="SnippetFormBuilder">
    <xpathexpr="//t[@id='form_form_hook']"position="replace">
        <!--Thissnippetcannotbeusedinsanitizedfields-->
        <!--becauseitcontainsinputsthatwouldberemoved-->
        <tt-snippet="website_form.s_website_form"t-thumbnail="/website/static/src/img/snippets_thumbs/s_website_form.svg"t-forbid-sanitize="form"/>
    </xpath>
</template>

</flectra>
