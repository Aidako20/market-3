<?xmlversion="1.0"encoding="utf-8"?>
<flectra>

<templateid="assets_frontend"inherit_id="web.assets_frontend">
    <xpathexpr="//link[last()]"position="after">
        <linkrel="stylesheet"type="text/scss"href="/google_recaptcha/static/src/scss/recaptcha.scss"/>
    </xpath>
    <xpathexpr="//script[last()]"position="after">
        <tt-set="recaptcha_public_key"t-value="request.env['ir.config_parameter'].sudo().get_param('recaptcha_public_key')"/>
        <scriptt-if="recaptcha_public_key"type="text/javascript">
            flectra.reCaptchaPublicKey='<tt-raw="recaptcha_public_key"/>';
        </script>
        <scripttype="text/javascript"src="/google_recaptcha/static/src/js/recaptcha.js"/>
    </xpath>
</template>

</flectra>
