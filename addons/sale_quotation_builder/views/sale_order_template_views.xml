<?xmlversion="1.0"encoding="utf-8"?>
<flectra>

    <recordid="sale_order_template_view_form_inherit_sale_quotation_builder"model="ir.ui.view">
        <fieldname="name">sale.order.template.form.inherit.sale_quotation_builder</field>
        <fieldname="inherit_id"ref="sale_management.sale_order_template_view_form"/>
        <fieldname="model">sale.order.template</field>
        <fieldname="type">form</field>
        <fieldname="arch"type="xml">
            <xpathexpr="//sheet"position='before'>
                <header>
                    <buttonname="open_template"class="oe_highlight"string="DesignTemplate"type="object"/>
                </header>
            </xpath>

            <xpathexpr="//notebook[@name='description']"position="inside">
                <pagestring="WebsiteDescription"name="website_description">
                    <fieldname="website_description"/>
                </page>
            </xpath>

            <xpathexpr="//tree/field[@name='product_uom_id']"position="after">
                <fieldname="website_description"invisible="1"/>
            </xpath>

            <xpathexpr="//notebook[@name='main_book']"position="inside">
                <fieldname="website_description"invisible="1"/>
            </xpath>

        </field>
    </record>

</flectra>
