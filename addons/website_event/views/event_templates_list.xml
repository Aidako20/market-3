<!--Index-Sidebar-Snippet-CountryEvents-->
<templateid="index_sidebar_country_event"inherit_id="website_event.index_sidebar"active="True"customize_show="True"name="CountryEvents"priority="70">
    <xpathexpr="//div[@id='o_wevent_index_sidebar']"position="inside">
        <divclass="o_wevent_sidebar_block">
            <tt-snippet-call="website_event.s_country_events"/>
