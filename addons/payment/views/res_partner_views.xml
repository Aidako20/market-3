<?xmlversion="1.0"?>
<flectra>
    <data>

        <!--Addcreditcardtores.partner-->
        <recordid="view_partners_form_payment_defaultcreditcard"model="ir.ui.view">
                <fieldname="name">view.res.partner.form.payment.defaultcreditcard</field>
                <fieldname="model">res.partner</field>
                <fieldname="inherit_id"ref="base.view_partner_form"/>
                <fieldname="priority"eval="15"/>
                <fieldname="arch"type="xml">
                    <divname="button_box"position="inside">
                        <buttontype="action"class="oe_stat_button"
                                icon="fa-credit-card"
                                name="%(payment.payment_token_action)d"
                                context="{'search_default_partner_id':active_id,'create':False,'edit':False}"
                                attrs="{'invisible':[('payment_token_count','=',0)]}">
                            <divclass="o_form_fieldo_stat_info">
                                <spanclass="o_stat_value">
                                    <fieldname="payment_token_count"widget="statinfo"nolabel="1"/>
                                </span>
                                <spanclass="o_stat_text">CreditCards</span>
                            </div>
                        </button>
                    </div>
                </field>
        </record>
    </data>
</flectra>
