<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <templateid="mail_client_extension.app_auth"name="Acceptapp">
        <tt-call="web.login_layout">
            <tt-set="disable_database_manager"t-value="1"/>
            <formrole="form"method="post"action="/mail_client_extension/auth/confirm">
                <inputtype="hidden"name="csrf_token"t-att-value="request.csrf_token()"/>
                <inputtype="hidden"name="redirect"t-att-value="redirect"/>
                <inputtype="hidden"name="scope"t-att-value="scope"/>
                <inputtype="hidden"name="friendlyname"t-att-value="friendlyname"/>
                <pclass="text-center">
                    Let<tt-esc="friendlyname"/>accessyourFlectradatabase?
                </p>
                <pclass="text-center">
                    <buttontype="submit"name="do"value="1"class="btnbtn-linkbtn-sm">Allow</button>
                    <buttontype="submit"name="do"class="btnbtn-linkbtn-sm">Deny</button>
                </p>
            </form>
        </t>
    </template>
</flectra>