<?xmlversion="1.0"encoding="utf-8"?>
<flectra>

        <recordid="res_config_settings_view_form"model="ir.ui.view">
            <fieldname="name">res.config.settings.view.form.inherit.auth.signup</field>
            <fieldname="model">res.config.settings</field>
            <fieldname="inherit_id"ref="base_setup.res_config_settings_view_form"/>
            <fieldname="arch"type="xml">
                <xpathexpr="//div[@id='access_rights']"position="after">
                    <divclass="col-12col-lg-6o_setting_box"
                        id="login_documents"
                        title="TosendinvitationsinB2Bmode,openacontactorselectseveralonesinlistviewandclickon'PortalAccessManagement'optioninthedropdownmenu*Action*.">
                        <divclass="o_setting_left_pane">
                        </div>
                        <divclass="o_setting_right_pane">
                            <labelfor="auth_signup_uninvited"/>
                            <divclass="text-muted">
                                Letyourcustomerslogintoseetheirdocuments
                            </div>
                            <divclass="mt8">
                                <fieldname="auth_signup_uninvited"class="o_light_label"widget="radio"required="True"/>
                            </div>
                            <divclass="content-group"attrs="{'invisible':[('auth_signup_uninvited','=','b2b')]}">
                                <divclass="mt8">
                                    <buttontype="object"name="open_template_user"string="DefaultAccessRights"icon="fa-arrow-right"class="btn-link"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <divclass="col-12col-lg-6o_setting_box"id="enable_password_reset">
                        <divclass="o_setting_left_pane">
                            <fieldname="auth_signup_reset_password"/>
                        </div>
                        <divclass="o_setting_right_pane">
                            <labelstring="PasswordReset"for="auth_signup_reset_password"/>
                            <divclass="text-muted">
                                EnablepasswordresetfromLoginpage
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

</flectra>
