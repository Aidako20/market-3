<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <templateid="kyc_status_message">
        <p>NewKYCStatus:<t-t-esc="kyc_status"/></p>
        <pt-if="account_holder_messages+shareholder_messages+bank_account_messages">
            Reason(s):
            <ul>
                <lit-if="account_holder_messages"t-foreach="account_holder_messages"t-as="message">
                    <tt-esc="message"/>
                </li>
                <lit-if="shareholder_messages">
                    Shareholders:
                    <ul>
                        <lit-foreach="shareholder_messages"t-as="message">
                            <tt-esc="message"/>
                        </li>
                    </ul>
                </li>
                <lit-if="bank_account_messages">
                    BankAccounts:
                    <ul>
                        <lit-foreach="bank_account_messages"t-as="message">
                            <tt-esc="message"/>
                        </li>
                    </ul>
                </li>
            </ul>
        </p>
    </template>
</flectra>
