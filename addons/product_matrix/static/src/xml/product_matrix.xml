<template>
    <divt-name="product_matrix.matrix">
        <tableclass="o_matrix_input_tableo_product_variant_matrixtabletable-smtable-stripedtable-bordered">
            <thead>
                <tr>
                    <tt-foreach="header"t-as="column_header">
                        <tht-attf-class="o_matrix_title_header{{column_header_first?'text-left':'text-center'}}">
                            <spant-esc="column_header.name"/>
                            <tt-call="product_matrix.extra_price">
                                <tt-set="price"t-value="column_header.price"/>
                            </t>
                        </th>
                    </t>
                </tr>
            </thead>
            <tbody>
                <trt-foreach="rows"t-as="row">
                    <tt-foreach="row"t-as="cell">
                        <tdt-if="cell.name"class="text-left">
                            <strongt-esc="cell.name"/>
