<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">
    <!--
        PopupRatingComposerWidget
        Itcanalsebeusedtomodifyamessage
    -->
    <tt-name="portal_rating.PopupComposer">
        <divclass="d-flexflex-wrapalign-items-center">
            <divclass="text-nowrap">
                <tt-call="portal_rating.rating_stars_static">
                    <tt-set="val"t-value="widget.rating_avg||0"/>
                    <tt-set="inline_mode"t-value="true"/>
                </t>
            </div>
            <buttont-if="widget.options['display_composer']"type="button"
                t-att-class="'btnbtn-smmx-3'+widget.options['link_btn_classes']or'btn-primary'"
                data-toggle="modal"data-target="#ratingpopupcomposer">
                <tt-if="widget.options['display_composer']">
                    <tt-if="widget.options['default_message_id']">
                        Modifyyourreview
                    </t>
                    <tt-else="">
                        Addareview
                    </t>
                </t>
            </button>
        </div>

        <divt-if="widget.options['display_composer']"class="modalfade"id="ratingpopupcomposer"tabindex="-1"role="dialog"aria-labelledby="ratingpopupcomposerlabel"aria-hidden="true">
            <divclass="modal-dialog"role="document">
                <divclass="modal-content">
                    <divclass="modal-header">
                        <h5class="modal-titleo_rating_popup_composer_label"id="ratingpopupcomposerlabel">
                            <tt-if="widget.options['default_message_id']">
                                Modifyyourreview
                            </t>
                            <tt-else="">
                                Addareview
                            </t>
                        </h5>
                        <buttontype="button"class="close"data-dismiss="modal"aria-label="Close">
                            <span>Ã—</span>
                        </button>
                    </div>
                    <divclass="modal-body">
                        <divclass="o_portal_chatter_composer"/>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
