<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <data>

        <recordid="acquirer_form_flectra_by_adyen"model="ir.ui.view">
            <fieldname="name">acquirer.form.flectra.by.adyen</field>
            <fieldname="model">payment.acquirer</field>
            <fieldname="inherit_id"ref="payment.acquirer_form"/>
            <fieldname="arch"type="xml">
                <xpathexpr='//group[@name="acquirer"]'position='inside'>
                    <groupattrs="{'invisible':[('provider','!=','flectra_adyen')]}">
                        <buttonname="flectra_adyen_create_account"icon="fa-arrow-right"type="object"class="btn-link"string="Createanaccountin1minute"
                            attrs="{'invisible':[('flectra_adyen_account_id','!=',False)]}"/>
                        <fieldname="flectra_adyen_account_id"readonly="1"attrs="{'invisible':[('flectra_adyen_account_id','=',False)]}"/>
                        <fieldname="flectra_adyen_payout_id"attrs="{'invisible':[('flectra_adyen_account_id','=',False)],'required':[('provider','=','flectra_adyen'),('state','!=','disabled')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</flectra>
