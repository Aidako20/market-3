            <fieldname="user_domain">[('karma','>',0)]</field>
            <fieldname="state">inprogress</field>
            <fieldname="challenge_category">forum</field>
        </record>
        <recordmodel="gamification.challenge.line"id="line_pundit">
            <fieldname="definition_id"ref="definition_pundit"/>
            <fieldname="target_goal">10</field>
            <fieldname="challenge_id"ref="challenge_pundit"/>
        </record>

