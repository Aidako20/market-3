<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <datanoupdate="1">
        <recordid="forum_help"model="forum.forum">
            <fieldname="name">Help</field>
            <fieldname="description">Thiscommunityisforprofessionalsandenthusiastsofourproductsandservices.Shareanddiscussthebestcontentandnewmarketingideas,buildyourprofessionalprofileandbecomeabettermarketertogether.</field>
