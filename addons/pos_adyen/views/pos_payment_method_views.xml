<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <recordid="pos_payment_method_view_form_inherit_pos_adyen"model="ir.ui.view">
        <fieldname="name">pos.payment.method.form.inherit.adyen</field>
        <fieldname="model">pos.payment.method</field>
        <fieldname="inherit_id"ref="point_of_sale.pos_payment_method_view_form"/>
        <fieldname="arch"type="xml">
            <xpathexpr="//field[@name='use_payment_terminal']"position="after">
                <!--Adyen-->
                <fieldname="adyen_api_key"attrs="{'invisible':[('use_payment_terminal','!=','adyen')],'required':[('use_payment_terminal','=','adyen')]}"/>
                <fieldname="adyen_terminal_identifier"attrs="{'invisible':[('use_payment_terminal','!=','adyen')],'required':[('use_payment_terminal','=','adyen')]}"/>
                <fieldname="adyen_test_mode"attrs="{'invisible':[('use_payment_terminal','!=','adyen')],'required':[('use_payment_terminal','=','adyen')]}"/>
                
                <!--FlectraPaymentsbyAdyen-->
                <fieldname="adyen_account_id"invisible="1"/>
                <fieldname="adyen_terminal_id"attrs="{'invisible':[('use_payment_terminal','!=','flectra_adyen')],'required':[('use_payment_terminal','=','flectra_adyen')]}"/>
                <fieldname="adyen_payout_id"attrs="{'invisible':[('use_payment_terminal','!=','flectra_adyen')],'required':[('use_payment_terminal','=','flectra_adyen')]}"options="{'no_create':True}"/>
            </xpath>
        </field>
    </record>
</flectra>
