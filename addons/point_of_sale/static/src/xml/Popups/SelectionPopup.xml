<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">

    <tt-name="SelectionPopup"owl="1">
        <divrole="dialog"class="modal-dialog">
            <Draggable>
                <divclass="popuppopup-selection">
                    <headerclass="titledrag-handle">
                        <tt-esc="props.title"/>
                    </header>
                    <divclass="selectionscrollable-y">
                        <tt-foreach="props.list"t-as="item"t-key="item.id">
                            <divclass="selection-item"t-att-class="{selected:item.isSelected}"
                                 t-on-click="selectItem(item.id)">
                                <tt-esc="item.label"/>
                            </div>
                        </t>
                    </div>
                    <footerclass="footer">
                        <divclass="buttoncancel"t-on-click="cancel">
                            <tt-esc="props.cancelText"/>
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
