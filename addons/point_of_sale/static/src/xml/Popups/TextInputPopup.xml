<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">

    <tt-name="TextInputPopup"owl="1">
        <divrole="dialog"class="modal-dialog">
            <divclass="popuppopup-textinput">
                <headerclass="title">
                    <tt-esc="props.title"/>
                </header>
                <divclass="div">
                    <p>
                        <tt-esc="props.body"/>
                    </p>
                    <inputtype="text"t-model="state.inputValue"t-ref="input"/>
                </div>
                <divclass="footer">
                    <divclass="buttonconfirm"t-on-click="confirm">
                        <tt-esc="props.confirmText"/>
                    </div>
                    <divclass="buttoncancel"t-on-click="cancel">
                        <tt-esc="props.cancelText"/>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
