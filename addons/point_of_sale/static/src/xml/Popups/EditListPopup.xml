<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">

    <tt-name="EditListPopup"owl="1">
        <divrole="dialog"class="modal-dialog">
            <divclass="popuppopup-text">
                <headerclass="title">
                    <tt-esc="props.title"/>
                </header>
                <mainclass="list-lines"t-on-remove-item="removeItem"
                      t-on-create-new-item="createNewItem">
                    <tt-foreach="state.array"t-as="item"t-key="item._id">
                        <EditListInputitem="item"/>
                    </t>
                </main>
                <footerclass="footer">
                    <divclass="buttonconfirm"t-on-click="confirm">
                        Ok
                    </div>
                    <divclass="buttoncancel"t-on-click="cancel">
                        Cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>

</templates>
