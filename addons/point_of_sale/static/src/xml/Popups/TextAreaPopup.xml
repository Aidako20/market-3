<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">

    <tt-name="TextAreaPopup"owl="1">
        <divrole="dialog"class="modal-dialog">
            <Draggable>
                <divclass="popuppopup-textarea">
                    <headerclass="titledrag-handle">
                        <tt-esc="props.title"/>
                    </header>
                    <textareat-model="state.inputValue"t-ref="input"></textarea>
                    <footerclass="footer">
                        <divclass="buttonconfirm"t-on-click="confirm">
                            <tt-esc="props.confirmText"/>
                        </div>
                        <divclass="buttoncancel"t-on-click="cancel">
                            <tt-esc="props.cancelText"/>
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
