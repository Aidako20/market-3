<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">

    <tt-name="ClientLine"owl="1">
        <trt-attf-class="client-line{{highlight}}"t-att-data-id="props.partner.id"
            t-on-click="trigger('click-client',{client:props.partner})">
            <td>
                <tt-esc="props.partner.name"/>
                <spant-if="highlight">
                    <br/><buttonclass="edit-client-button"t-on-click.stop="trigger('click-edit')">EDIT</button>
                </span>
            </td>
            <tdt-if="!env.isMobile">
                <tt-esc="props.partner.address"/>
            </td>
            <tdt-if="!env.isMobile"style="width:130px;">
                <tt-esc="props.partner.phone||''"/>
            </td>
            <tdt-if="env.isMobile">
                <tt-esc="props.partner.zipor''"/>
                <spant-if="highlight"><br/></span>
            </td>
            <td>
                <tt-esc="props.partner.emailor''"/>
                <spant-if="highlight"><br/></span>
            </td>
        </tr>
    </t>

</templates>
