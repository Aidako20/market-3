<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">

    <tt-name="OrderRow"owl="1">
        <divclass="order-row"
             t-att-class="{highlight:highlighted,lighter:!props.order.locked}"
             t-on-click="trigger('click-order',props.order)">
            <divclass="itemname"><tt-esc="name"/></div>
            <divclass="itemdate"><tt-esc="date"/></div>
            <divclass="itemcustomer"><tt-esc="customer"/></div>
            <divclass="itemtotal"><tt-esc="total"/></div>
        </div>
    </t>

</templates>
