        <fieldname="city">İçAnadoluBölgesi</field>
        <fieldname="country_id"ref="base.tr"/>
        <fieldname="state_id"ref="base.state_tr_81"/>
        <fieldname="zip">06810</field>
        <fieldname="phone">+905012345678</field>
        <fieldname="email">info@company.trexample.com</field>
        <fieldname="website">www.trexample.com</field>
