<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <data>

        <recordid="acquirer_form_sips"model="ir.ui.view">
            <fieldname="name">acquirer.form.sips</field>
            <fieldname="model">payment.acquirer</field>
            <fieldname="inherit_id"ref="payment.acquirer_form"/>
            <fieldname="arch"type="xml">
                <xpathexpr='//group[@name="acquirer"]'position='inside'>
                    <groupattrs="{'invisible':[('provider','!=','sips')]}">
                        <fieldname="sips_merchant_id"attrs="{'required':[('provider','=','sips'),('state','!=','disabled')]}"/>
                        <fieldname="sips_secret"attrs="{'required':[('provider','=','sips'),('state','!=','disabled')]}"/>
                        <fieldname="sips_test_url"attrs="{'required':[('provider','=','sips'),('state','!=','disabled')]}"groups='base.group_no_one'/>
                        <fieldname="sips_prod_url"attrs="{'required':[('provider','=','sips'),('state','!=','disabled')]}"groups='base.group_no_one'/>
                        <fieldname="sips_version"attrs="{'required':[('provider','=','sips'),('state','!=','disabled')]}"/>
                        <fieldname="sips_key_version"attrs="{'required':[('provider','=','sips'),('state','!=','disabled')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</flectra>
