<?xmlversion="1.0"encoding="utf-8"?>
<flectra>

    <templateid="gst_report_purchaseorder_document_inherit"inherit_id="purchase.report_purchaseorder_document">
        <xpathexpr="//t[@t-foreach='o.order_line']//td[@id='product']"position="replace">
            <td>
                <spant-field="line.name"/>
                <tt-if="line.product_id.l10n_in_hsn_codeando.company_id.country_id.code=='IN'">
                    <h6>
                        <strongclass="ml16">HSN/SACCode:</strong>
                        <spant-field="line.product_id.l10n_in_hsn_code"/>
                    </h6>
                </t>
            </td>
        </xpath>
    </template>

    <templateid="gst_report_purchasequotation_document_inherit"inherit_id="purchase.report_purchasequotation_document">
        <xpathexpr="//t[@t-foreach='o.order_line']//td[@id='product']"position="replace">
            <td>
                <spant-field="order_line.name"/>
                <tt-if="order_line.product_id.l10n_in_hsn_codeando.company_id.country_id.code=='IN'">
                    <h6>
                        <strongclass="ml16">HSN/SACCode:</strong>
                        <spant-field="order_line.product_id.l10n_in_hsn_code"/>
                    </h6>
                </t>
            </td>
        </xpath>
    </template>

</flectra>
