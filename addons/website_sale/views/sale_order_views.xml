        action="base.action_partner_customer_form"
        parent="menu_orders"sequence="4"/>


    <!--Catalogsub-menus-->
    <menuitemid="menu_catalog_products"name="Products"
        action="product_template_action_website"
        parent="menu_catalog"sequence="1"/>
