<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <data>

        <!--mail.shortcode-->
        <recordid="mail_shortcode_action"model="ir.actions.act_window">
            <fieldname="name">ChatShortcode</field>
            <fieldname="res_model">mail.shortcode</field>
            <fieldname="view_mode">tree,form</field>
            <fieldname="help"type="html">
              <pclass="o_view_nocontent_smiling_face">
                Defineanewchatshortcode
              </p><p>
                Ashortcodeisakeyboardshortcut.Forinstance,youtype#gmanditwillbetransformedinto"GoodMorning".
              </p>
            </field>
        </record>

        <recordid="mail_shortcode_view_tree"model="ir.ui.view">
            <fieldname="name">mail.shortcode.tree</field>
            <fieldname="model">mail.shortcode</field>
            <fieldname="arch"type="xml">
                <treestring="Shortcodes">
                    <fieldname="source"/>
                    <fieldname="substitution"/>
                    <fieldname="description"/>
                </tree>
            </field>
        </record>

        <recordid="mail_shortcode_view_form"model="ir.ui.view">
            <fieldname="name">mail.shortcode.form</field>
            <fieldname="model">mail.shortcode</field>
            <fieldname="arch"type="xml">
                <formstring="Shortcodes">
                    <sheet>
                       <group>
                            <fieldname="source"/>
                            <fieldname="substitution"/>
                            <fieldname="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</flectra>
