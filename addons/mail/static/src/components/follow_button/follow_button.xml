<?xmlversion="1.0"encoding="UTF-8"?>
<templatesxml:space="preserve">

    <tt-name="mail.FollowButton"owl="1">
        <divclass="o_FollowButton">
            <tt-if="thread.isCurrentPartnerFollowing">
                <buttonclass="o_FollowButton_unfollowbtnbtn-link"t-att-class="{'o-following':!state.isUnfollowButtonHighlighted,'o-unfollow':state.isUnfollowButtonHighlighted}"t-att-disabled="props.isDisabled"t-on-click="_onClickUnfollow"t-on-mouseenter="_onMouseEnterUnfollow"t-on-mouseleave="_onMouseLeaveUnfollow">
                    <tt-if="state.isUnfollowButtonHighlighted">
                        <iclass="fafa-times"/>Unfollow
                    </t>
                    <tt-else="">
                        <iclass="fafa-check"/>Following
                    </t>
                </button>
            </t>
            <tt-else="">
                <buttonclass="o_FollowButton_followbtnbtn-link"t-att-disabled="props.isDisabled"t-on-click="_onClickFollow">
                    Follow
                </button>
            </t>
        </div>
    </t>

</templates>
