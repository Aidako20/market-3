<?xmlversion="1.0"encoding="UTF-8"?>
<templatesxml:space="preserve">
    <tt-name="mail.ModerationBanDialog"owl="1">
        <DialogcontentClass="'o_ModerationBanDialog'"title="CONFIRMATION"size="'medium'"t-ref="dialog">
            <tt-if="messages.length===1">
                <p>Youaregoingtobanthefollowinguser:</p>
            </t>
            <tt-else="">
                <p>Youaregoingtobanthefollowingusers:</p>
            </t>
            <ulclass="my-5">
                <tt-foreach="messages"t-as="message"t-key="message.localId">
                    <lit-esc="message.email_from"/>
                </t>
            </ul>
            <p>Doyouconfirmtheaction?</p>
            <tt-set-slot="buttons">
                <buttonclass="o-banbtnbtn-primary"t-on-click="_onClickBan">Ban</button>
                <buttonclass="o-cancelbtnbtn-secondary"t-on-click="_onClickCancel">Cancel</button>
            </t>
        </Dialog>
    </t>
</templates>
