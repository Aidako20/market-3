<?xmlversion="1.0"encoding="UTF-8"?>
<templatesxml:space="preserve">

    <tt-name="mail.ActivityMarkDonePopover"owl="1">
        <divclass="o_ActivityMarkDonePopover"t-on-keydown="_onKeydown">
            <tt-if="activity">
                <textareaclass="form-controlo_ActivityMarkDonePopover_feedback"rows="3"placeholder="WriteFeedback"t-on-blur="_onBlur"t-ref="feedbackTextarea"/>
                <divclass="o_ActivityMarkDonePopover_buttons">
                    <buttontype="button"class="o_ActivityMarkDonePopover_doneScheduleNextButtonbtnbtn-smbtn-primary"t-on-click="_onClickDoneAndScheduleNext"t-esc="DONE_AND_SCHEDULE_NEXT"/>
                    <tt-if="!activity.force_next">
                        <buttontype="button"class="o_ActivityMarkDonePopover_doneButtonbtnbtn-smbtn-primary"t-on-click="_onClickDone">
                            Done
                        </button>
                    </t>
                    <buttontype="button"class="o_ActivityMarkDonePopover_discardButtonbtnbtn-smbtn-link"t-on-click="_onClickDiscard">
                        Discard
                    </button>
                </div>
            </t>
        </div>
    </t>

</templates>
