<?xmlversion="1.0"encoding="UTF-8"?>
<templatesxml:space="preserve">

    <tt-name="mail.NotificationPopover"owl="1">
        <divclass="o_NotificationPopover">
            <tt-foreach="notifications"t-as="notification"t-key="notification.localId">
                <divclass="o_NotificationPopover_notification">
                    <iclass="o_NotificationPopover_notificationIcon"t-att-class="iconClass"t-att-title="iconTitle"role="img"/>
                    <tt-if="notification.partner">
                        <spanclass="o_NotificationPopover_notificationPartnerName"t-esc="notification.partner.nameOrDisplayName"/>
                    </t>
                </div>
            </t>
        </div>
    </t>

</templates>
