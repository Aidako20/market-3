<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">

<tt-name="survey.survey_breadcrumb_template">
    <olclass="breadcrumbjustify-content-endbg-transparent">
        <tt-set="canGoBack"t-value="widget.canGoBack"/>
        <tt-foreach="widget.pages"t-as="page">
            <tt-set="isActivePage"t-value="page.id===widget.currentPageId"/>
            <lit-att-class="'breadcrumb-item'+(isActivePage?'activefont-weight-bold':'')"
                t-att-data-page-id="page.id"
                t-att-data-page-title="page.title">
                <tt-if="widget.currentPageId===page.id">
                    <!--Userscanonlygobackandnotforward-->
                    <!--Assoonaswereachthecurrentpage,set"can_go_back"toFalse-->
                    <tt-set="canGoBack"t-value="false"/>
                </t>
                <tt-if="canGoBack">
                    <aclass="text-primarytext-break"href="#">
                        <spant-esc="page.title"/>
                    </a>
                </t>
                <tt-else="">
                    <spant-att-class="'text-break'+(isActivePage?'text-black':'text-muted')"
                          t-esc="page.title"/>
                </t>
            </li>
        </t>
    </ol>
</t>

</templates>
