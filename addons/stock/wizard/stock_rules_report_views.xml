<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <recordid="view_stock_rules_report"model="ir.ui.view">
        <fieldname="name">StockRulesReport</field>
        <fieldname="model">stock.rules.report</field>
        <fieldname="arch"type="xml">
            <formstring="ProductRoutesReport">
                <group>
                    <fieldname="product_tmpl_id"invisible="1"/>
                    <fieldname="product_has_variants"invisible="1"/>
                    <fieldname="product_id"
                        domain="[('product_tmpl_id','=',product_tmpl_id)]"
                        attrs="{'readonly':[('product_has_variants','=',False)]}"options="{'no_create':True}"/>
                    <fieldname="warehouse_ids"
                        groups="stock.group_stock_multi_warehouses"
                        widget="many2many_tags"/>
                </group>
                <footer>
                    <buttonname="print_report"
                        string="Overview"
                        type="object"
                        class="btn-primary"/>
                    <buttonstring="Cancel"class="btn-default"special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <recordid="action_stock_rules_report"model="ir.actions.act_window">
        <fieldname="name">StockRulesReport</field>
        <fieldname="type">ir.actions.act_window</field>
        <fieldname="res_model">stock.rules.report</field>
        <fieldname="view_mode">form</field>
        <fieldname="view_id"ref="view_stock_rules_report"/>
        <fieldname="target">new</field>
    </record>
</flectra>
