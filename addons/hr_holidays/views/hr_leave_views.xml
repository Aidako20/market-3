    <recordid="hr_leave_view_form_dashboard_new_time_off"model="ir.ui.view">
        <fieldname="name">hr.leave.view.form.dashboard.new.time.off</field>
        <fieldname="model">hr.leave</field>
        <fieldname="inherit_id"ref="hr_holidays.hr_leave_view_form_dashboard"/>
        <fieldname="mode">primary</field>
        <fieldname="priority">17</field>
        <fieldname="arch"type="xml">
            <xpathexpr="//sheet"position="after">
                <footer>
                    <buttonstring="Save"special="save"class="oe_highlight"/>
