        <recordid="snippets_debug_view"model="ir.ui.view">
            <fieldname="name">SnippetDebug</field>
            <fieldname="type">qweb</field>
            <fieldname="key">website.snippets_debug_page_view</field>
            <fieldname="arch"type="xml">
                <tname="Debug"t-name="website.snippets_debug_page_view">
                    <tt-call="website.layout">
                        <style>
                            #snippets_menu,#o_scroll>.o_panel>.o_panel_header{
                                display:none!important;
                            }
                            [data-oe-type="snippet"]:not([data-module-id])::before{
                                content:attr(name);
                                display:block;
                                padding:16px;
                                background-color:lightgray;
                                color:black;
                                font-size:24px;
                            }
                            [data-oe-type="snippet"]:not([data-module-id])::after{
                                content:"";
                                display:table;
                                clear:both;
                            }
                        </style>
                        <divid="wrap"class="oe_structure">
                            <tt-call="website.snippets"/>
                        </div>
                    </t>
                </t>
            </field>
        </record>
