    <xpathexpr="//link[last()]"position="after">
        <linkrel="stylesheet"type="text/scss"href="/website/static/src/snippets/s_image_gallery/001.scss"/>
    </xpath>
</template>

<templateid="assets_snippet_s_image_gallery_js_000"inherit_id="website.assets_frontend">
    <xpathexpr="//script[last()]"position="after">
        <scripttype="text/javascript"src="/website/static/src/snippets/s_image_gallery/000.js"/>
    </xpath>
</template>

</flectra>
