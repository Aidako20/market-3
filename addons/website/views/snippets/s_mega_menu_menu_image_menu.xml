<?xmlversion="1.0"encoding="utf-8"?>
<flectra>

<templateid="s_mega_menu_menu_image_menu"name="Menu-Image-Menu">
    <sectionclass="s_mega_menu_menu_image_menupy-4">
        <divclass="container">
            <divclass="rowalign-items-center">
                <divclass="col-lg-4py-2text-center">
                    <h4class="o_default_snippet_text">LeftMenu</h4>
                    <navclass="navflex-column">
                        <tt-foreach="3"t-as="i">
                            <tt-set="text">MenuItem%s</t>
                            <tt-set="text"t-value="text%(i+1)"/>
                            <ahref="#"class="nav-linko_default_snippet_text"data-name="MenuItem"
                                t-esc="text"/>
                        </t>
                    </nav>
                </div>
                <divclass="col-lg-4py-2text-center">
                    <imgclass="img-fluid"src="/web/image/website.s_mega_menu_menu_image_menu_default_image"/>
                </div>
                <divclass="col-lg-4py-2text-center">
                    <h4class="o_default_snippet_text">RightMenu</h4>
                    <navclass="navflex-column">
                        <tt-foreach="3"t-as="i">
                            <tt-set="text">MenuItem%s</t>
                            <tt-set="text"t-value="text%(i+1)"/>
                            <ahref="#"class="nav-linko_default_snippet_text"data-name="MenuItem"
                                t-esc="text"/>
                        </t>
                    </nav>
                </div>
            </div>
        </div>
    </section>
</template>

</flectra>
