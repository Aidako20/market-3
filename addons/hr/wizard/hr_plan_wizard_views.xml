<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <data>
        <recordid="plan_wizard"model="ir.ui.view">
            <fieldname="name">planwizard</field>
            <fieldname="model">hr.plan.wizard</field>
            <fieldname="arch"type="xml">
                <form>
                    <sheet>
                        <group>
                            <fieldname="plan_id"/>
                            <fieldname="employee_id"invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <buttonname="action_launch"string="LaunchPlan"type="object"class="oe_highlight"groups="hr.group_hr_manager"/>
                        <buttonstring="Cancel"class="btn-secondary"special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <recordid="plan_wizard_action"model="ir.actions.act_window">
            <fieldname="name">LaunchPlan</field>
            <fieldname="res_model">hr.plan.wizard</field>
            <fieldname="view_mode">form</field>
            <fieldname="target">new</field>
        </record>
    </data>
</flectra>
