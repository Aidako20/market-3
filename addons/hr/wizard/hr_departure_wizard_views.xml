<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <data>
        <recordid="hr_departure_wizard_view_form"model="ir.ui.view">
            <fieldname="name">hr.departure.wizard.view.form</field>
            <fieldname="model">hr.departure.wizard</field>
            <fieldname="arch"type="xml">
                <form>
                    <sheet>
                        <groupid="info"string="DepartureInfo">
                            <fieldname="employee_id"invisible="1"/>
                            <fieldname="departure_reason"/>
                            <fieldname="departure_description"/>
                            <fieldname="archive_private_address"/>
                        </group>
                        <groupid="date"string="DepartureDate">
                            <fieldname="departure_date"/>
                        </group>
                    </sheet>
                    <footer>
                        <buttonname="action_register_departure"string="Save"type="object"class="oe_highlight"/>
                        <buttonstring="OnlyEmployee"class="btn-secondary"special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <recordid="hr_departure_wizard_action"model="ir.actions.act_window">
            <fieldname="name">RegisterDeparture</field>
            <fieldname="res_model">hr.departure.wizard</field>
            <fieldname="view_mode">form</field>
            <fieldname="target">new</field>
        </record>
    </data>
</flectra>
