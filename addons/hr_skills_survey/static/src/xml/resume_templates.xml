<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">

<tt-extend="hr_resume_data_row">
    <tt-jquery="tr.o_data_row"t-operation="append">
        <tt-if="data.display_type==='certification'">
            <tdclass="o_data_cellcontainer"colspan="2">
                <divclass="o_resume_linerow"t-att-data-id="id">
                    <divclass="o_resume_line_datescol-lg-3">
                        <span><tt-esc="data.date_start"/></span>
                    </div>
                    <divclass="o_resume_line_desccol-lg-8">
                        <h3><tt-esc="data.name"/></h3>
                        <tt-if="data.description"t-esc="data.description"/>
                    </div>
                    <divclass="o_resume_line_iconicon_trophycol-lg-1">
                        <iclass="fafa-trophyfa-2x"></i>
                    </div>
                </div>
            </td>
        </t>
    </t>
</t>

</templates>
