<?xml version="1.0" encoding="UTF-8"?>
<flectra>
    <record model="ir.ui.view" id="journal_config_type_tree">
        <field name="name">journal.config.type.tree</field>
        <field name="model">journal.config.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="journal_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="journal_config_type_form">
        <field name="name">journal.config.type.form</field>
        <field name="model">journal.config.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                        </group>
                        <group>
                            <field name="journal_id" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_journal_config_type" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">journal.config.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_journal_config_type"
        action="action_journal_config_type"
        parent="account.menu_finance_configuration"
        sequence="10"/>

</flectra>
