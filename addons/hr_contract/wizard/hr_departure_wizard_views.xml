<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <recordid="hr_departure_wizard_view_form"model="ir.ui.view">
        <fieldname="name">hr.departure.wizard.view.form.extend</field>
        <fieldname="model">hr.departure.wizard</field>
        <fieldname="inherit_id"ref="hr.hr_departure_wizard_view_form"/>
        <fieldname="arch"type="xml">
            <xpathexpr="//field[@name='departure_date']"position="replace">
                <fieldname="departure_date"string="ContractEndDate"/>
            </xpath>
            <xpathexpr="//group[@id='date']"position="inside">
                <fieldname="set_date_end"string="Setenddatetocurrentcontract"/>
            </xpath>
        </field>
    </record>
</flectra>
