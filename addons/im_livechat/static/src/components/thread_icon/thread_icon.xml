<?xmlversion="1.0"encoding="UTF-8"?>
<templatesxml:space="preserve">
    <tt-inherit="mail.ThreadIcon"t-inherit-mode="extension">
        <xpathexpr="//*[@name='rootCondition']"position="inside">
            <tt-elif="thread.channel_type==='livechat'">
                <tt-if="thread.orderedOtherTypingMembers.length>0">
                    <ThreadTypingIcon
                        class="o_ThreadIcon_typing"
                        animation="'pulse'"
                        title="thread.typingStatusText"
                    />
                </t>
                <tt-else="">
                    <divclass="fafa-comments"title="Livechat"/>
                </t>
            </t>
        </xpath>
    </t>
</templates>
