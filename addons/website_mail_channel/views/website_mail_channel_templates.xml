        <divid="wrap"class="oe_structureoe_empty">
            <divclass="container">
                <p>
                    Youhavebeencorrectly
                    <tt-if="subscribing">subscribed</t>
                    <tt-if="notsubscribing">unsubscribed</t>
                    tothemailinglist.
                </p>
            </div>
        </div>
    </t>
</template>

