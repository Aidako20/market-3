<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <recordid="acquirer_form_stripe"model="ir.ui.view">
        <fieldname="name">payment.acquirer.form.inherit</field>
        <fieldname="model">payment.acquirer</field>
        <fieldname="inherit_id"ref="payment.acquirer_form"/>
        <fieldname="arch"type="xml">
            <xpathexpr='//group[@name="acquirer"]'position='inside'>
                <groupattrs="{'invisible':[('provider','!=','stripe')]}">
                    <fieldname="stripe_secret_key"attrs="{'required':[('provider','=','stripe'),('state','!=','disabled')]}"password="True"/>
                    <fieldname="stripe_publishable_key"attrs="{'required':[('provider','=','stripe'),('state','!=','disabled')]}"password="True"/>
                    <fieldname="stripe_webhook_secret"password="True"/>
                </group>
            </xpath>
            <xpathexpr='//group[@name="acquirer_config"]'position='after'>
                <groupattrs="{'invisible':[('provider','!=','stripe')]}">
                    <fieldname="stripe_image_url"/>
                </group>
            </xpath>
        </field>
    </record>
</flectra>
