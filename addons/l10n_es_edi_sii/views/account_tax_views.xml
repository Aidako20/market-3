<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <data>
        <recordid="account_tax_form_inherit_l10n_es_edi"model="ir.ui.view">
            <fieldname="name">account.tax.form.inherit.l10n_es_edi</field>
            <fieldname="model">account.tax</field>
            <fieldname="inherit_id"ref="account.view_tax_form"/>
            <fieldname="arch"type="xml">
                <xpathexpr="//field[@name='tax_scope']"position="after">
                    <fieldname="l10n_es_type"
                           attrs="{'invisible':[('country_code','!=','ES')]}"/>
                    <fieldname="l10n_es_exempt_reason"
                           attrs="{'invisible':[('country_code','!=','ES'),('l10n_es_type','!=','exento')],'required':[('l10n_es_type','=','exento'),('type_tax_use','=','sale')]}"/>
                    <fieldname="l10n_es_bien_inversion"
                           attrs="{'invisible':[('country_code','!=','ES'),('l10n_es_type','!=','exento')],'required':[('l10n_es_type','=','exento'),('type_tax_use','=','sale')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</flectra>
