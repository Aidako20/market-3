<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
        <recordid="email_template_form_simplified"model="ir.ui.view">
            <fieldname="name">mail.template.form.simplified</field>
            <fieldname="model">mail.template</field>
            <fieldname="priority">100</field>
            <fieldname="arch"type="xml">
                <formstring="EmailTemplate">
                    <group>
                        <fieldname="subject"invisible="1"/>
                        <fieldname="name"invisible="1"/>
                        <fieldname="model"invisible="1"/>
                        <h3colspan="2">Body</h3>
                        <fieldname="body_html"nolabel="1"colspan="2"widget="html"
                            options="{'style-inline':true}"/>
                        <fieldname="attachment_ids"nolabel="1"colspan="2"
                            widget="many2many_binary"/>
                    </group>
                </form>
            </field>
        </record>
</flectra>
