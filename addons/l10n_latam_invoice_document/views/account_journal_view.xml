<?xmlversion="1.0"encoding="utf-8"?>
<flectra>

    <recordid="view_account_journal_form"model="ir.ui.view">
        <fieldname="model">account.journal</field>
        <fieldname="name">account.journal.form</field>
        <fieldname="inherit_id"ref="account.view_account_journal_form"/>
        <fieldname="arch"type="xml">
            <form>
                <fieldname="country_code"invisible="1"/>
                <fieldname="l10n_latam_company_use_documents"invisible="1"/>
            </form>
            <fieldname="type"position="after">
                <fieldname="l10n_latam_use_documents"attrs="{'invisible':['|',('l10n_latam_company_use_documents','=',False),('type','notin',['purchase','sale'])]}"/>
            </field>
        </field>
    </record>

</flectra>
