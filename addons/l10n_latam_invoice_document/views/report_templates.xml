<?xmlversion="1.0"encoding="utf-8"?>
<flectra>

    <templateid="external_layout_standard"inherit_id="web.external_layout_standard">
        <!--supportforcustomheader-->
        <divt-attf-class="headero_company_#{company.id}_layout"position="attributes">
            <attributename="t-if">notcustom_header</attribute>
        </div>
        <divt-attf-class="headero_company_#{company.id}_layout"position="after">
            <divt-attf-class="headero_company_#{company.id}_layout"t-if="custom_header">
                <tt-if="custom_header"t-call="#{custom_header}"/>
            </div>
        </div>

        <!--supportforcustomfooter-->
        <divt-attf-class="footero_standard_footero_company_#{company.id}_layout"position="attributes">
            <attributename="t-if">notcustom_footer</attribute>
        </div>

        <divt-attf-class="footero_standard_footero_company_#{company.id}_layout"position="after">
            <divt-attf-class="footero_standard_footero_company_#{company.id}_layout"t-if="custom_footer">
                <tt-if="custom_footer"t-raw="custom_footer"/>
            </div>
        </div>
    </template>

