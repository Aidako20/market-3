<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <templateid="s_twitter"name="TwitterScroller">
        <sectionclass="twitter"data-screen-name="OpenERP"data-limit="15">
            <divclass="twitter_timelineo_not_editable"/>
        </section>
    </template>

    <templateid="remove_external_snippets"inherit_id="website.external_snippets">
        <xpathexpr="//t[@t-install='website_twitter']"position="replace"/>
    </template>
     <templateid="website_twitter_snippet"inherit_id="website.snippets">
        <xpathexpr="//t[@id='twitter_favorite_tweets_hook']"position="replace">
            <tt-snippet="website_twitter.s_twitter"t-thumbnail="/website/static/src/img/snippets_thumbs/s_twitter_scroll.svg"/>
        </xpath>
    </template>

    <templateid="website_twitter_options"inherit_id="website.snippet_options">
        <xpathexpr="."position="inside">
            <divdata-js="twitter"data-selector=".twitter"/>
        </xpath>
    </template>

    <templateid="twitter"inherit_id="website.assets_frontend">
        <xpathexpr="//link[last()]"position="after">
            <linkrel="stylesheet"type="text/scss"href="/website_twitter/static/src/scss/website_twitter.scss"/>
        </xpath>
        <xpathexpr="//script[last()]"position="after">
            <scripttype="text/javascript"src="/website_twitter/static/src/js/website.twitter.animation.js"/>
        </xpath>
    </template>
    <templateid="twitter_editor"inherit_id="website.assets_editor">
        <xpathexpr="//script[last()]"position="after">
            <scripttype="text/javascript"src="/website_twitter/static/src/js/website.twitter.editor.js"/>
        </xpath>
    </template>
</flectra>
