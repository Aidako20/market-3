<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <datanoupdate="1">
        <recordid="action_open_website"model="ir.actions.act_url">
            <fieldname="name">WebsiteRecruitmentForm</field>
            <fieldname="target">self</field>
            <fieldname="url">/jobs</field>
        </record>
        <recordid="base.open_menu"model="ir.actions.todo">
            <fieldname="action_id"ref="action_open_website"/>
            <fieldname="state">open</field>
        </record>
    </data>
    <data>
        <recordid="hr_recruitment.model_hr_applicant"model="ir.model">
            <fieldname="website_form_key">apply_job</field>
            <fieldname="website_form_default_field_id"ref="hr_recruitment.field_hr_applicant__description"/>
            <fieldname="website_form_access">True</field>
            <fieldname="website_form_label">ApplyforaJob</field>
        </record>
        <functionmodel="ir.model.fields"name="formbuilder_whitelist">
            <value>hr.applicant</value>
            <valueeval="[
                'description',
                'email_from',
                'partner_name',
                'partner_phone',
                'job_id',
                'department_id',
            ]"/>
        </function>
    </data>
</flectra>
