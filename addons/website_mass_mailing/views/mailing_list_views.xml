<?xmlversion="1.0"encoding="utf-8"?>
<flectra>
    <recordid="mailing_list_view_form"model="ir.ui.view">
        <fieldname="name">mailing.list.view.form.inherit.website</field>
        <fieldname="model">mailing.list</field>
        <fieldname="inherit_id"ref="mass_mailing.mailing_list_view_form"/>
        <fieldname="arch"type="xml">
            <xpathexpr="//sheet"position="inside">
                <notebook>
                    <pagestring="Websitepopups"name="website_popups">
                        <fieldname="website_popup_ids">
                            <tree>
                                <fieldname="website_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
            <xpathexpr="//div[hasclass('oe_title')]"position="after">
                <group>
                    <fieldname="toast_content"/>
                </group>
            </xpath>
        </field>
    </record>
</flectra>
