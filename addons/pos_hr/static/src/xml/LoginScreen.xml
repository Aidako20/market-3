<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">
    <tt-name="LoginScreen"owl="1">
        <divclass="login-overlay">
            <divclass="screen-login">
                <divclass="login-title"><small>Loginto</small>
                    <tt-esc="shopName"/>
                </div>
                <divclass="login-body">
                    <spanclass="login-element">
                        <imgclass="login-barcode-img"
                             src="/point_of_sale/static/img/barcode.png"/>
                        <divclass="login-barcode-text">Scanyourbadge</div>
                    </span>
                    <spanclass="login-or">or</span>
                    <spanclass="login-element">
                        <buttonclass="login-buttonselect-employee"
                                t-on-click="selectCashier">SelectCashier</button>
                    </span>
                </div>
                <divclass="login-footer">
                    <small>
                        <buttonclass="login-buttonclose-session"t-on-click="closeSession">Closesession</button>
                    </small>
                </div>
            </div>
        </div>
    </t>
</templates>
