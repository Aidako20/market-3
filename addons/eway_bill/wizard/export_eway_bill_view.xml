<?xml version="1.0" encoding="utf-8"?>
<flectra>

    <record id="view_export_eway_bill_wizard" model="ir.ui.view">
        <field name="name">export.eway.bill.wizard.form</field>
        <field name="model">export.eway.bill</field>
        <field name="arch" type="xml">
            <form string="Export Eway Bill">
                <separator string="Click on Export button to generate json file for eway bill"/>
                <group>
                    <field name="file" filename="filename" attrs="{'invisible': [('file', '=', False)]}" readonly="1"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button name="generate_eway_bill" string="Export" type="object"
                        icon="terp-camera_test" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_export_eway_bill_wizard" model="ir.actions.act_window">
        <field name="name">Export EWay Bill</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">export.eway.bill</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
    
     <act_window
        id="action_export_eway_bill_wizard"
        name="Export EWay Bill"
        res_model="export.eway.bill"
        src_model="eway.bill"
        view_mode="form"/>

</flectra>
