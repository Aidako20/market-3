        <!--ShareButtoninactionmenu-->
        <recordid="model_sale_order_action_share"model="ir.actions.server">
            <fieldname="name">Share</field>
            <fieldname="model_id"ref="sale.model_sale_order"/>
            <fieldname="binding_model_id"ref="sale.model_sale_order"/>
            <fieldname="binding_view_types">form</field>
            <fieldname="state">code</field>
            <fieldname="code">action=records.action_share()</field>
