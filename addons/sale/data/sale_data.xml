            <fieldname="key">sale.default_confirmation_template</field>
            <fieldname="value"ref="sale.mail_template_sale_confirmation"/>
        </record>

        <functionmodel="ir.default"name="set"eval="('product.template','invoice_policy','delivery')"/>
    </data>
