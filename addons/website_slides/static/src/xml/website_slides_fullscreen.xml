<templatesid="template"xml:space="preserve">

    <tt-name="website.slides.fullscreen.content">
        <tt-if="_.contains(['document','presentation'],widget.get('slide').type)">
            <divclass="embed-responsiveh-100">
                <iframet-att-src="widget.get('slide').embedUrl"class="o_wslides_iframe_viewer"allowFullScreen="true"frameborder="0"/>
            </div>
        </t>
        <tt-if="widget.get('slide').type==='infographic'">
            <divclass="o_wslides_fs_playerw-100h-100overflow-autod-flexalign-items-startjustify-content-center">
                <imgt-att-src="'/web/image/slide.slide/'+widget.get('slide').id+'/image_1024'"class="img-fluidposition-relativem-auto"alt="Slideimage"/>
            </div>
        </t>
    </t>

    <tt-name="website.slides.fullscreen.video">
        <divclass="playerembed-responsiveembed-responsive-16by9embed-responsive-itemh-100">
            <iframet-att-id="'youtube-player'+widget.slide.id"t-att-src="widget.slide.embedUrl"allowFullScreen="true"frameborder="0"enablejsapi="1"autoplay="1"allow="autoplay"></iframe>
        </div>
    </t>

</templates>
