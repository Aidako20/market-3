<?xmlversion="1.0"encoding="UTF-8"?>
<templates>
    <divt-name="LunchPreviousOrdersWidgetNoOrder"class="col-lg-12">
        <h3>Thisisthefirsttimeyouorderameal</h3>
        <pclass="text-muted">Selectaproductandputyourordercommentsonthenote.</p>
        <pclass="text-muted">Yourfavoritemealswillbecreatedbasedonyourlastorders.</p>
        <pclass="text-muted">Don'tforgetthealertsdisplayedinthereddisharea</p>
    </div>
    <divt-name="LunchPreviousOrdersWidgetList"class="row">
        <divt-foreach="categories"t-as="supplier"class="col-lg-4">
            <h3><tt-esc="supplier"/></h3>
            <divt-foreach='categories[supplier]'t-as='order'class="o_lunch_vignette">
                <buttontype="button"class="float-righto_add_buttonoe_edit_onlyoe_link"t-att-data-id="order.line_id">
                    <spanclass="fafa-plus-square"></span>
                    <span>Add</span>
                </button>
                <div>
                    <tt-esc="order.product_name"/>
                    <spanclass="badgebadge-pillfloat-right">
                        <spanclass="o_lunch_price"t-raw="formatValue(order)"/>
                    </span>
                </div>
                <divclass="text-muted">
                    <tt-if="order.note!=false"t-esc="order.note"/>
                </div>
            </div>
        </div>
    </div>
</templates>
