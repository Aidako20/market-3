<?xmlversion="1.0"encoding="UTF-8"?>
<templatesid="template"xml:space="preserve">

    <tt-name="TableWidget"owl="1">
        <divt-if="!props.isSelected"class="table"t-on-click.stop="trigger('select-table',props.table)">
            <spanclass="table-cover"t-att-class="{full:fill>=1}"></span>
            <spant-att-class="orderCountClass"t-att-hidden="orderCount===0">
                <tt-esc="orderCount"/>
            </span>
            <spanclass="label">
                <tt-esc="props.table.name"/>
            </span>
            <spanclass="table-seats">
                <tt-esc="props.table.seats"/>
            </span>
        </div>
    </t>

</templates>
